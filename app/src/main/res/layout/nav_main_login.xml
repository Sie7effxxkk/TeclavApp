<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<data>
    <variable
        name="usuario"
        type="edu.unicauca.teclav_beta.Usuario" />
</data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="#D37EC9F1"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <ImageView
            android:id="@+id/imageView_login"
            android:layout_width="107dp"
            android:layout_height="81dp"
            android:contentDescription="@string/nav_header_desc"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:src="@{usuario.getmFoto}" />

        <TextView
            android:id="@+id/text_nombre_login"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:fontFamily="casual"

            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="@{usuario.getmNombre}"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_correo_login"
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="@{usuario.getmCorreo}"
            android:textColor="#000000" />


    </LinearLayout>


</layout>

