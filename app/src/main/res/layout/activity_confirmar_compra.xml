<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F1E4"

    tools:context=".ConfirmarCompra">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#49D1E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:subtitleTextAppearance="@style/TextAppearance.AppCompat.Body1"
        app:subtitleTextColor="#FFFFFF"
        app:titleTextColor="#FFFFFF"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="202dp"
        android:layout_height="31dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="173dp"
        android:layout_marginRight="173dp"
        android:fontFamily="casual"
        android:text="Titulo:"
        android:textColor="#020202"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/text_titulo_con"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3"
        app:layout_constraintVertical_bias="0.49" />

    <TextView
        android:id="@+id/text_titulo_con"
        android:layout_width="337dp"
        android:layout_height="31dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:fontFamily="casual"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="206dp"
        android:layout_height="30dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginEnd="169dp"
        android:layout_marginRight="169dp"
        android:fontFamily="casual"
        android:text="Precio:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/text_precio_con"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_titulo_con" />

    <TextView
        android:id="@+id/text_precio_con"
        android:layout_width="195dp"
        android:layout_height="24dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="casual"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintEnd_toStartOf="@+id/textView14"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="220dp"
        android:layout_height="25dp"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="casual"
        android:text="Medios de Pago:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton_efecty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_precio_con" />

    <ImageButton
        android:id="@+id/imageButton_bancamia"
        android:layout_width="104dp"
        android:layout_height="31dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="15dp"
        android:background="#FFFFFF"
        android:onClick="action_button_daviplata"
        android:translationX="-70dp"
        android:translationY="4dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton_servientrega"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton_mastercard"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_bancolombbia"
        app:srcCompat="@mipmap/bancamia_foreground" />

    <ImageButton
        android:id="@+id/imageButton_efecty"
        android:layout_width="76dp"
        android:layout_height="55dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginBottom="4dp"
        android:background="#FDD50A"
        android:onClick="action_button_efecty"
        android:translationY="-10dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton_mastercard"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_paypal"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        app:srcCompat="@mipmap/efecty_foreground" />

    <ImageButton
        android:id="@+id/imageButton_mastercard"
        android:layout_width="84dp"
        android:layout_height="52dp"
        android:layout_marginStart="66dp"
        android:layout_marginLeft="66dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="2dp"
        android:background="#E1FFFFFF"
        android:onClick="action_button_mastercard"
        android:translationX="-30dp"
        android:translationY="-12dp"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_bancamia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_efecty"
        app:srcCompat="@mipmap/icon_mastercard" />

    <ImageButton
        android:id="@+id/imageButton_paypal"
        android:layout_width="78dp"
        android:layout_height="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="6dp"
        android:background="#8F9CED"
        android:onClick="action_button_paypal"
        android:translationY="-12dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton_mastercard"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_bancolombbia"
        app:layout_constraintStart_toEndOf="@+id/imageButton_efecty"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/paypal_foreground" />

    <ImageButton
        android:id="@+id/imageButton_bancolombbia"
        android:layout_width="66dp"
        android:layout_height="53dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="30dp"
        android:background="#FFFFFF"
        android:onClick="action_button_bancolombia"
        android:translationY="12dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton_bancamia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton_paypal"
        app:layout_constraintTop_toBottomOf="@+id/text_titulo_con"
        app:layout_constraintVertical_bias="0.49"
        app:srcCompat="@mipmap/visa_foreground" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="8dp"
        android:background="#F6BA23"
        android:fontFamily="casual"
        android:onClick="action_button"
        android:text="Confirmar Compra"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_envio" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginEnd="198dp"
        android:layout_marginRight="198dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="casual"
        android:text="Preferencias de Envio:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton_interrapidismo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_mastercard" />

    <ImageButton
        android:id="@+id/imageButton_interrapidismo"
        android:layout_width="102dp"
        android:layout_height="49dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginEnd="71dp"
        android:layout_marginRight="71dp"
        android:background="#11062C"
        android:onClick="action_button_interrapidisimo"
        android:tint="#2DFFFFFF"
        android:translationX="-30dp"
        android:translationY="-10dp"
        app:layout_constraintBottom_toTopOf="@+id/checkBox_domicilio"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_servientrega"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        app:srcCompat="@mipmap/inter_rapidisimo_foreground" />

    <ImageButton
        android:id="@+id/imageButton_servientrega"
        android:layout_width="103dp"
        android:layout_height="48dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="103dp"
        android:layout_marginRight="103dp"
        android:layout_marginBottom="90dp"
        android:background="#388E3C"
        android:onClick="action_button_servientraga"
        android:translationX="-60dp"
        android:translationY="5dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton_interrapidismo"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_bancamia"
        app:srcCompat="@mipmap/servi_entrega_foreground" />

    <CheckBox
        android:id="@+id/checkBox_domicilio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginEnd="223dp"
        android:layout_marginRight="223dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="casual"
        android:onClick="onCheckboxClicked"
        android:text="Envio a domicilio"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/checkBox_envio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_interrapidismo" />

    <CheckBox
        android:id="@+id/checkBox_envio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginEnd="269dp"
        android:layout_marginRight="269dp"
        android:fontFamily="casual"
        android:onClick="onCheckboxClicked"
        android:text="Envio Gratis"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_domicilio" />

    <ImageButton
        android:id="@+id/imageButton_visa"
        android:layout_width="81dp"
        android:layout_height="44dp"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="15dp"
        android:background="#17275A"
        android:onClick="action_button_visa"
        android:translationX="-40dp"
        android:translationY="-10dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton_fedex"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toEndOf="@+id/imageButton_bancamia"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_bancolombbia"
        app:srcCompat="@mipmap/visa_sisas_foreground" />

    <ImageButton
        android:id="@+id/imageButton_fedex"
        android:layout_width="93dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="69dp"
        android:background="#4D0891"
        android:onClick="action_button_fedex"
        android:translationX="-25dp"
        android:translationY="5dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageButton_servientrega"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_visa"
        app:srcCompat="@mipmap/fedex_foreground" />


</androidx.constraintlayout.widget.ConstraintLayout>