<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="producto"
            type="edu.unicauca.teclav_beta.Producto" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="518dp"
        android:layout_marginTop="10dp">

        |

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="593dp"
            android:layout_marginTop="0dp"
            android:background="#F6F1E4">


            <TextView
                android:id="@+id/text_esNuevo"
                android:layout_width="110dp"
                android:layout_height="24dp"
                android:layout_marginStart="27dp"
                android:layout_marginLeft="27dp"
                android:layout_marginEnd="230dp"
                android:layout_marginRight="230dp"
                android:text="@{producto.comprobarEstado}"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="#353535"
                android:textSize="16dp"
                android:translationY="-90dp"
                app:layout_constraintBottom_toTopOf="@+id/textView30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView27" />

            <TextView
                android:id="@+id/text_Precio"
                android:layout_width="146dp"
                android:layout_height="29dp"

                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:text="@{producto.DubleaPrecio}"
                android:textColor="#353535"
                android:textSize="22sp"
                android:translationY="-90dp"
                app:layout_constraintBottom_toTopOf="@+id/textView27"
                app:layout_constraintEnd_toStartOf="@+id/imageView"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView26"
                app:layout_constraintTop_toBottomOf="@+id/textView26"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="334dp"
                android:layout_height="311dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:background="#F6F1E4"
                android:src="@{producto.getmUrlImage}"
                android:translationY="-54dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView25" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="345dp"
                android:layout_marginRight="345dp"
                android:fontFamily="casual"
                android:text="Titulo:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="275dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:fontFamily="casual"
                android:text="@{producto.getmTitulo}"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16dp"
                android:translationY="-27dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView24" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="96dp"
                android:layout_marginRight="96dp"
                android:fontFamily="casual"
                android:text="Precio:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"
                android:translationY="-62dp"
                app:layout_constraintEnd_toStartOf="@+id/textView28"
                app:layout_constraintHorizontal_bias="0.259"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="62dp"
                android:layout_height="23dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="59dp"
                android:layout_marginRight="59dp"
                android:fontFamily="casual"
                android:text="Estado:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"
                android:translationY="-90dp"
                app:layout_constraintBottom_toTopOf="@+id/text_esNuevo"
                app:layout_constraintEnd_toStartOf="@+id/textView28"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_Precio"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="135dp"
                android:layout_marginRight="135dp"
                android:layout_marginBottom="144dp"
                android:fontFamily="casual"
                android:text="Disponibles:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/scrollView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/text_esNuevo"
                app:layout_constraintTop_toBottomOf="@+id/text_Precio"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="27dp"
                android:layout_height="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="31dp"
                android:layout_marginRight="31dp"
                android:layout_marginBottom="52dp"
                android:fontFamily="casual"
                android:text="@{producto.Dispinibilidad}"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#353535"
                android:textSize="18dp"
                android:translationX="-29dp"
                android:translationY="-50dp"
                app:layout_constraintBottom_toTopOf="@+id/scrollView3"
                app:layout_constraintEnd_toStartOf="@+id/imageButton2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView28"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="121dp"
                android:layout_height="31dp"
                android:layout_marginStart="36dp"
                android:layout_marginLeft="36dp"
                android:layout_marginEnd="269dp"
                android:layout_marginRight="269dp"
                android:fontFamily="casual"
                android:text="Descripcion:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:translationY="-90dp"
                app:layout_constraintBottom_toTopOf="@+id/scrollView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.242"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_esNuevo" />

            <ScrollView
                android:id="@+id/scrollView3"
                android:layout_width="308dp"
                android:layout_height="57dp"
                android:layout_marginStart="36dp"
                android:layout_marginLeft="36dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="13dp"
                android:background="#F6F1E4"
                android:translationY="-90dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.473"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView30">

                <TextView
                    android:id="@+id/text_Descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF6F1E4"

                    android:fontFamily="casual"
                    android:orientation="vertical"
                    android:text="@{producto.getmDescripcion}"
                    android:textSize="14dp" />
            </ScrollView>

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="54dp"
                android:layout_height="46dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                android:background="#F6F1E4"
                android:translationY="-53dp"
                app:layout_constraintBottom_toTopOf="@+id/scrollView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/scrollView3"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_baseline_favorite_border_34" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>